<?xml version="1.0" encoding="utf-8"?>
<com.weihu.autolayout.AdapterConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3D5D"
    tools:context="com.weihu.autolayout.musicdemo.MusicDemoActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nav_music"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/music_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/music_3"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/music_2"
        app:layout_constraintRight_toLeftOf="@+id/imageView6"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/music_1"
        app:layout_constraintRight_toLeftOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="600dp"
        android:layout_height="202dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/music_piano"
        />
</com.weihu.autolayout.AdapterConstraintLayout>
